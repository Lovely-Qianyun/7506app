<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD9A4"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <View
            android:id="@+id/return_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/icon_back"
            android:clickable="true" />

        <View
            android:id="@+id/aligne_star"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="68dp"
            android:layout_marginRight="38dp"
            android:background="@drawable/icon_aligne_start_fill" />


        <RelativeLayout
            android:id="@+id/frame_15"
            android:layout_width="348dp"
            android:layout_height="495dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <View
                    android:layout_width="328dp"
                    android:layout_height="465dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_book_card" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:id="@+id/img_book_cover"
                        android:layout_width="162dp"
                        android:layout_height="222dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="90dp"
                        android:background="@drawable/img_book_cover" />

                    <TextView
                        android:id="@+id/txt_book_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Book Title"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txt_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="0dp"
                        android:text="Some Author"
                        android:textColor="#000000"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:layout_width="338dp"
                        android:layout_height="62dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/avatar_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="80dp"
                            app:srcCompat="@drawable/img_example_avatar" />

                        <ImageView
                            android:id="@+id/avatar_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-10dp"
                            app:srcCompat="@drawable/img_example_avatar" />

                        <ImageView
                            android:id="@+id/avatar_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-10dp"
                            app:srcCompat="@drawable/img_example_avatar" />

                        <ImageView
                            android:id="@+id/avatar_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="-10dp"
                            app:srcCompat="@drawable/img_example_avatar" />

                        <TextView
                            android:id="@+id/txt_people_rated"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="{} people rated"
                            android:textColor="#7C7C7C"
                            android:textSize="10dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="264dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="-0dp"
                android:background="@drawable/bg_down_side_plate">


                <View
                    android:id="@+id/btn_refresh"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="26dp"
                    android:background="@drawable/icon_refresh_button" />

                <View
                    android:id="@+id/btn_dislike"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="82dp"
                    android:background="@drawable/icon_dislike" />

                <View
                    android:id="@+id/btn_like"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="145dp"
                    android:background="@drawable/icon_like" />

                <View
                    android:id="@+id/btn_listAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="206.5dp"
                    android:background="@drawable/icon_server_add" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>